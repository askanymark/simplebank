{
  "swagger": "2.0",
  "info": {
    "title": "Simplebank API",
    "version": "1.0",
    "contact": {
      "name": "Marks Paskannijs",
      "url": "https://github.com/askanymark/simplebank",
      "email": "marks@askanymark.io"
    }
  },
  "tags": [
    {
      "name": "Simplebank"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/accounts": {
      "post": {
        "summary": "Create account",
        "description": "Creates a new account for the logged in user",
        "operationId": "Simplebank_CreateAccount",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbAccount"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbCreateAccountRequest"
            }
          }
        ],
        "tags": [
          "Account"
        ]
      }
    },
    "/v1/transactions": {
      "get": {
        "summary": "List transactions",
        "description": "Lists transactions for all user owned accounts",
        "operationId": "Simplebank_ListTransactions",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbListTransactionsResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "username",
            "description": "Bankers can specify username to list transactions for",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "cursor",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "type": "string",
            "format": "int64"
          }
        ],
        "tags": [
          "Transaction"
        ]
      }
    },
    "/v1/users": {
      "post": {
        "summary": "Create a new user",
        "description": "Use this API to create a new user",
        "operationId": "Simplebank_CreateUser",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbUser"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbCreateUserRequest"
            }
          }
        ],
        "tags": [
          "User"
        ]
      },
      "put": {
        "summary": "Update existing user",
        "description": "Use this API to update user",
        "operationId": "Simplebank_UpdateUser",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbUser"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbUpdateUserRequest"
            }
          }
        ],
        "tags": [
          "User"
        ]
      }
    },
    "/v1/users/login": {
      "post": {
        "summary": "Login user",
        "description": "Use this API to login user",
        "operationId": "Simplebank_LoginUser",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbLoginUserResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbLoginUserRequest"
            }
          }
        ],
        "tags": [
          "User"
        ]
      }
    },
    "/v1/users/verify": {
      "get": {
        "summary": "Verify email",
        "description": "Use this API to verify email",
        "operationId": "Simplebank_VerifyEmail",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbVerifyEmailResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "emailId",
            "in": "query",
            "required": false,
            "type": "string",
            "format": "int64"
          },
          {
            "name": "secretCode",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "User"
        ]
      }
    }
  },
  "definitions": {
    "pbAccount": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "int64"
        },
        "owner": {
          "type": "string"
        },
        "balance": {
          "type": "string",
          "format": "int64"
        },
        "currency": {
          "$ref": "#/definitions/pbCurrency"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "pbCreateAccountRequest": {
      "type": "object",
      "properties": {
        "currency": {
          "$ref": "#/definitions/pbCurrency",
          "enum": [
            "USD",
            "EUR",
            "GBP"
          ],
          "description": "Type of currency that will be used for this account. Note: you cannot change account's currency after creating it"
        }
      },
      "required": [
        "currency"
      ]
    },
    "pbCreateUserRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "maxLength": 100,
          "minLength": 3,
          "pattern": "^[a-z0-9_]+$"
        },
        "fullName": {
          "type": "string",
          "maxLength": 100,
          "minLength": 3,
          "pattern": "^[a-zA-Z\\s]+$"
        },
        "email": {
          "type": "string",
          "description": "RFC 5322",
          "maxLength": 100,
          "minLength": 6
        },
        "password": {
          "type": "string",
          "maxLength": 100,
          "minLength": 6
        }
      },
      "required": [
        "username",
        "fullName",
        "email",
        "password"
      ]
    },
    "pbCurrency": {
      "type": "string",
      "enum": [
        "USD",
        "EUR",
        "GBP"
      ],
      "default": "USD"
    },
    "pbListTransactionsResponse": {
      "type": "object",
      "properties": {
        "pagination": {
          "$ref": "#/definitions/pbPagination"
        },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/pbTransaction"
          }
        }
      }
    },
    "pbLoginUserRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "pbLoginUserResponse": {
      "type": "object",
      "properties": {
        "user": {
          "$ref": "#/definitions/pbUser"
        },
        "sessionId": {
          "type": "string"
        },
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        },
        "accessTokenExpiresAt": {
          "type": "string",
          "format": "date-time"
        },
        "refreshTokenExpiresAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "pbPagination": {
      "type": "object",
      "properties": {
        "next": {
          "type": "string",
          "description": "The cursor to the next page. If it's missing, there is no next page"
        },
        "count": {
          "type": "string",
          "format": "int64",
          "description": "The total number of items in the paginated response"
        }
      },
      "required": [
        "count"
      ]
    },
    "pbTransaction": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "int64"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "credit": {
          "type": "string",
          "format": "int64"
        },
        "debit": {
          "type": "string",
          "format": "int64"
        },
        "balance": {
          "type": "string",
          "format": "int64"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "pbUpdateUserRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "maxLength": 100,
          "minLength": 3,
          "pattern": "^[a-z0-9_]+$"
        },
        "fullName": {
          "type": "string",
          "maxLength": 100,
          "minLength": 3,
          "pattern": "^[a-zA-Z\\s]+$"
        },
        "email": {
          "type": "string",
          "description": "RFC 5322",
          "maxLength": 100,
          "minLength": 6
        },
        "password": {
          "type": "string",
          "maxLength": 100,
          "minLength": 6
        }
      },
      "required": [
        "username"
      ]
    },
    "pbUser": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "passwordChangedAt": {
          "type": "string",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "pbVerifyEmailResponse": {
      "type": "object",
      "properties": {
        "isVerified": {
          "type": "boolean"
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
